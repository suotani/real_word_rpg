<div class="container">
  <div class="card" style="max-width: 700px; margin: 50px auto">
    <div class="card-header">
      経験
    </div>
    <div class="card-body">
      <%= form_with model: @ticket, local: true do |f| %>
        <div class="field form-group">
          <label>タイトル</label><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="field form-group">
          <label>購入に必要なポイント</label><br />
          <%= f.text_field :point, class: "form-control" %>
        </div>
       <div class="field form-group">
          <label>カラー</label><br />
          <%= f.color_field :color, class: "form-control" %>
        </div>

        <div class="field form-group">
          <input type="submit" value="編集" class="btn btn-primary">
          <%= link_to "削除", ticket_path(@ticket.id), method: "delete", data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>

</div>